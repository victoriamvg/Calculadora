pipeline {
    agent any

    stages {
        stage('Checkout Codebase') {
            steps {
                cleanWs()
                checkout scm: [$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/victoriamvg/Calculadora.git']]]
            }
        }
        stage('Build') {
            steps {
                bat 'cd src &&  javac -cp "../lib/junit-4.13.2.jar" AppTest.java App.java'
            }
        }
        stage('Test') {
            steps{
                bat 'cd src/ && java -jar ../lib/junit-4.13.2.jar -cp "." --select-class AppTest --reports-dir="reports"'
            }
        }
        stage('Deploy') {
            steps {
                bat 'cd src/ && java App'
            }
        }
    }
}